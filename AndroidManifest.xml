<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.whichprep"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="WhichPrep"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.dcu.redmonj9.whichprep.FrontMenuActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dcu.redmonj9.whichprep.QuizActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dcu.redmonj9.whichprep.QuizResultsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dcu.redmonj9.whichprep.TimedQuizActivity">
        </activity>
    </application>

</manifest>
